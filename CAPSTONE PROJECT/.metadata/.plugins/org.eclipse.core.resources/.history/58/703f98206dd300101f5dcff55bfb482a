package com.pizzastore.menuservice.controller;

import com.pizzastore.menuservice.beans.MenuItem;
import com.pizzastore.menuservice.beans.MenuCategory;
import com.pizzastore.menuservice.repository.MenuItemRepository;
import com.pizzastore.menuservice.repository.MenuCategoryRepository;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.*;
import java.util.List;

@RestController
@RequestMapping("/menu")
public class MenuController {

    @Autowired 
    private MenuItemRepository menuItemRepo; // ⭐ Variable name is menuItemRepo

    @Autowired 
    private MenuCategoryRepository categoryRepo;

    @GetMapping("/items")
    public List<MenuItem> getAllItems() { 
        return menuItemRepo.findAll(); 
    }

    @GetMapping("/categories")
    public List<MenuCategory> getAllCategories() { 
        return categoryRepo.findAll(); 
    }

    // ⭐ FIX: Added Search Endpoint
    @GetMapping("/search")
    public List<MenuItem> searchItems(@RequestParam("keyword") String keyword) {
        // Uses menuItemRepo correctly
        return menuItemRepo.findByNameContainingIgnoreCase(keyword);
    }

    @PostMapping("/items")
    public MenuItem addItem(@RequestBody MenuItem item) {
        if(item.getCategory() != null && item.getCategory().getCategoryId() != null) {
             MenuCategory existingCategory = categoryRepo.findById(item.getCategory().getCategoryId())
                .orElse(null);
             item.setCategory(existingCategory);
        }
        return menuItemRepo.save(item);
    }

    @GetMapping("/items/{id}")
    public MenuItem getItemById(@PathVariable Long id) {
        return menuItemRepo.findById(id).orElseThrow(() -> new RuntimeException("Not Found"));
    }

    @PutMapping("/items/{id}")
    public MenuItem updateItem(@PathVariable Long id, @RequestBody MenuItem item) {
        MenuItem existing = menuItemRepo.findById(id).orElseThrow(() -> new RuntimeException("Not Found"));
        
        existing.setName(item.getName());
        existing.setPrice(item.getPrice());
        existing.setDescription(item.getDescription());
        existing.setImageUrl(item.getImageUrl());
        existing.setAvailable(item.getAvailable());
        
        if (item.getCategory() != null && item.getCategory().getCategoryId() != null) {
             MenuCategory existingCategory = categoryRepo.findById(item.getCategory().getCategoryId())
                .orElse(null);
            existing.setCategory(existingCategory);
        }
        
        return menuItemRepo.save(existing);
    }

    @DeleteMapping("/items/{id}")
    public void deleteItem(@PathVariable Long id) {
        menuItemRepo.deleteById(id);
    }
}